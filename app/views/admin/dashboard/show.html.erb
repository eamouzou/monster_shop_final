<h2>
  Orders
</h2>

<p>
  <h3>
    Packaged
  </h3>
</p>

<section id="packaged">
  <% @orders.each do |order| %>
    <section id="packaged-order<%= order.id %>">
      <% if order.status == "packaged" %>
        <p>Name:
          <%=link_to "#{order.name}", "/admin/profile/#{order.user.id}" %></p>
        <p>Order ID:
          <%=link_to "#{order.id}", "/orders/#{order.id}" %></p>
        <p>Date Created:
          <%= order.created_at %></p>
        <p><%= button_to "Ship this Order", "/admin/orders/#{order.id}", method: :patch %></p>
      <% end %>
    </section>
  <% end %>
</section>

